<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <description>Flight Creator</description>
    <isExposed>true</isExposed>
    <masterLabel>Flight Creator</masterLabel>

    <targets>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="planeType" type="String" label="Plane Type"
                      description="Plane Type"/>

            <property name="from" type="String" label="Airport From"
                      description="Airport From"/>

            <property name="to" type="String" label="Airport To"
                      description="Airport To"/>

            <property name="planeId" type="String" label="Plane"
                      description="Plane"/>

            <property name="selectedDate" type="Date" label="Departure date"
                      description="Date of departure"/>
        </targetConfig>

    </targetConfigs>
</LightningComponentBundle>
